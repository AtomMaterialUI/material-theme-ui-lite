<idea-plugin>
    <id>com.mallowigi.idea</id>
    <name>Material Theme UI Lite</name>
    <version>@version@</version>
    <category>Themes</category>
    <vendor email="elior@material-theme.com" url="https://github.com/mallowigi">AtomMaterial</vendor>

    <description><![CDATA[
        <!--suppress LongLine -->
        <h1>Material Theme UI Lite</h1>
        <h2>Material Design Experience for JetBrains IDEs</h2>
        <hr />
        <div>
            <a href="https://www.material-theme.com" style="outline: none;">
                <img src="https://raw.githubusercontent.com/ChrisRM/material-theme-jetbrains/master/laptop-full.png"
                     width="640"
                     alt="theme">
            </a>
        </div>
        <hr>
        <p>This is a lite version of the <a href="https://plugins.jetbrains.com/plugin/8006-material-theme-ui">Material
            Theme UI Plugin</a>
            containing only the themes and color schemes.</p>
        ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <change-notes></change-notes>

    <idea-version since-build="191.6183"/>
    <resource-bundle>messages.MaterialThemeBundle</resource-bundle>


    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="com.mallowigi.idea.MTStartup"/>
        <themeProvider id="Material Oceanic" path="/themes/Material Oceanic.theme.json"/>
        <themeProvider id="Material Darker" path="/themes/Material Darker.theme.json"/>
        <themeProvider id="Material Lighter" path="/themes/Material Lighter.theme.json"/>
        <themeProvider id="Material Palenight" path="/themes/Material Palenight.theme.json"/>
        <themeProvider id="Material Deep Ocean" path="/themes/Material Deep Ocean.theme.json"/>
        <themeProvider id="Material Forest" path="/themes/Material Forest.theme.json"/>
        <themeProvider id="Material Sky Blue" path="/themes/Material Sky Blue.theme.json"/>
        <themeProvider id="Material SandyBeach" path="/themes/Material Sandy Beach.theme.json"/>
        <themeProvider id="Material Volcano" path="/themes/Material Volcano.theme.json"/>
        <themeProvider id="Dracula" path="/themes/Dracula.theme.json"/>
        <themeProvider id="Monokai Pro" path="/themes/Monokai Pro.theme.json"/>
        <themeProvider id="Arc Dark" path="/themes/Arc Dark.theme.json"/>
        <themeProvider id="Atom One Dark" path="/themes/Atom One Dark.theme.json"/>
        <themeProvider id="Atom One Light" path="/themes/Atom One Light.theme.json"/>
        <themeProvider id="Solarized Dark" path="/themes/Solarized Dark.theme.json"/>
        <themeProvider id="Solarized Light" path="/themes/Solarized Light.theme.json"/>
        <themeProvider id="GitHub" path="/themes/GitHub.theme.json"/>
        <themeProvider id="GitHub Dark" path="/themes/GitHub Dark.theme.json"/>
        <themeProvider id="Night Owl" path="/themes/Night Owl.theme.json"/>
        <themeProvider id="Light Owl" path="/themes/Light Owl.theme.json"/>
        <themeProvider id="Moonlight" path="/themes/Moonlight.theme.json"/>
        <themeProvider id="SynthWave '84" path="/themes/SynthWave '84.theme.json"/>

        <themeProvider id="Material Oceanic Contrast"
                       path="/themes/Material Oceanic Contrast.theme.json"/>
        <themeProvider id="Material Darker Contrast" path="/themes/Material Darker Contrast.theme.json"/>
        <themeProvider id="Material Lighter Contrast"
                       path="/themes/Material Lighter Contrast.theme.json"/>
        <themeProvider id="Material Palenight Contrast"
                       path="/themes/Material Palenight Contrast.theme.json"/>
        <themeProvider id="Material Deep Ocean Contrast"
                       path="/themes/Material Deep Ocean Contrast.theme.json"/>
        <themeProvider id="Material Forest Contrast" path="/themes/Material Forest Contrast.theme.json"/>
        <themeProvider id="Material Sky Blue Contrast" path="/themes/Material Sky Blue Contrast.theme.json"/>
        <themeProvider id="Material SandyBeach Contrast" path="/themes/Material Sandy Beach Contrast.theme.json"/>
        <themeProvider id="Material Volcano Contrast" path="/themes/Material Volcano Contrast.theme.json"/>
        <themeProvider id="Dracula Contrast" path="/themes/Dracula Contrast.theme.json"/>
        <themeProvider id="Monokai Pro Contrast" path="/themes/Monokai Pro Contrast.theme.json"/>
        <themeProvider id="Arc Dark Contrast" path="/themes/Arc Dark Contrast.theme.json"/>
        <themeProvider id="Atom One Dark Contrast" path="/themes/Atom One Dark Contrast.theme.json"/>
        <themeProvider id="Atom One Light Contrast" path="/themes/Atom One Light Contrast.theme.json"/>
        <themeProvider id="Solarized Dark Contrast"
                       path="/themes/Solarized Dark Contrast.theme.json"/>
        <themeProvider id="Solarized Light Contrast"
                       path="/themes/Solarized Light Contrast.theme.json"/>
        <themeProvider id="GitHub Contrast"
                       path="/themes/GitHub Contrast.theme.json"/>
        <themeProvider id="GitHub Dark Contrast"
                       path="/themes/GitHub Dark Contrast.theme.json"/>
        <themeProvider id="Night Owl Contrast"
                       path="/themes/Night Owl Contrast.theme.json"/>
        <themeProvider id="Light Owl Contrast"
                       path="/themes/Light Owl Contrast.theme.json"/>
        <themeProvider id="Moonlight Contrast"
                       path="/themes/Moonlight Contrast.theme.json"/>
        <themeProvider id="SynthWave '84 Contrast" path="/themes/SynthWave '84 Contrast.theme.json"/>


        <notificationGroup displayType="STICKY_BALLOON" id="Material Theme UI Lite Notifications"/>

    </extensions>

    <actions>
        <group id="MaterialLiteTheme.ThemeChooser" popup="true"
               icon="/icons/actions/mt/themeSwitch.svg">
            <group id="MaterialTheme.ThemeChooser.Dark"
                   popup="true"
                   icon="/icons/actions/mt/dark.svg"
                   class="com.mallowigi.idea.themes.ActionGroup">

                <action id="MTDarkerTheme"
                        class="com.mallowigi.idea.themes.MTDarkerThemeAction"
                        icon="/icons/actions/themes/darker.svg">
                </action>
                <action id="MTOceanicTheme"
                        class="com.mallowigi.idea.themes.MTOceanicThemeAction"
                        icon="/icons/actions/themes/oceanic.svg">
                </action>
                <action id="MTPalenightTheme"
                        class="com.mallowigi.idea.themes.MTPalenightThemeAction"
                        icon="/icons/actions/themes/palenight.svg">
                </action>

                <separator key="separator.nature"/>

                <action id="MTDeepOceanTheme"
                        class="com.mallowigi.idea.themes.MTDeepOceanThemeAction"
                        icon="/icons/actions/themes/deepocean.svg">
                </action>
                <action id="MTForestTheme"
                        class="com.mallowigi.idea.themes.MTForestThemeAction"
                        icon="/icons/actions/themes/forest.svg">
                </action>
                <action id="MTVolcanoTheme"
                        class="com.mallowigi.idea.themes.MTVolcanoThemeAction"
                        icon="/icons/actions/themes/volcano.svg">
                </action>

                <separator key="separator.third.-.party"/>

                <action id="MTMonokaiTheme"
                        class="com.mallowigi.idea.themes.MTMonokaiThemeAction"
                        icon="/icons/actions/themes/monokai.svg">
                </action>
                <action id="MTGitHubDarkTheme"
                        class="com.mallowigi.idea.themes.MTGithubDarkThemeAction"
                        icon="/icons/actions/themes/githubdark.svg">
                </action>
                <action id="MTDraculaTheme"
                        class="com.mallowigi.idea.themes.MTDraculaThemeAction"
                        icon="/icons/actions/themes/dracula.svg">
                </action>
                <action id="MTArcDarkTheme"
                        class="com.mallowigi.idea.themes.MTArcDarkThemeAction"
                        icon="/icons/actions/themes/arc_dark.svg">
                </action>
                <action id="MTOneDarkTheme"
                        class="com.mallowigi.idea.themes.MTOneDarkThemeAction"
                        icon="/icons/actions/themes/one_dark.svg">
                </action>
                <action id="MTSolarizedDarkTheme"
                        class="com.mallowigi.idea.themes.MTSolarizedDarkThemeAction"
                        icon="/icons/actions/themes/solarized_dark.svg">
                </action>
                <action id="MTNightOwlTheme"
                        class="com.mallowigi.idea.themes.MTNightOwlThemeAction"
                        icon="/icons/actions/themes/night_owl.svg">
                </action>
                <action id="MTMoonlightTheme"
                        class="com.mallowigi.idea.themes.MTMoonlightThemeAction"
                        icon="/icons/actions/themes/moonlight.svg">
                </action>
                <action id="MTSynthwaveTheme"
                        class="com.mallowigi.idea.themes.MTSynthwaveThemeAction"
                        icon="/icons/actions/themes/synthwave.svg">
                </action>
            </group>

            <group id="MaterialTheme.ThemeChooser.Light"
                   popup="true"
                   icon="/icons/actions/mt/light.svg"
                   class="com.mallowigi.idea.themes.ActionGroup">
                <action id="MTLighterTheme"
                        class="com.mallowigi.idea.themes.MTLighterThemeAction"
                        icon="/icons/actions/themes/lighter.svg">
                </action>
                <action id="MTGitHubTheme"
                        class="com.mallowigi.idea.themes.MTGithubThemeAction"
                        icon="/icons/actions/themes/github.svg">
                </action>
                <action id="MTOneLightTheme"
                        class="com.mallowigi.idea.themes.MTOneLightThemeAction"
                        icon="/icons/actions/themes/one_light.svg">
                </action>
                <action id="MTSolarizedLightTheme"
                        class="com.mallowigi.idea.themes.MTSolarizedLightThemeAction"
                        icon="/icons/actions/themes/solarized_light.svg">
                </action>
                <action id="MTLightOwlTheme"
                        class="com.mallowigi.idea.themes.MTLightOwlThemeAction"
                        icon="/icons/actions/themes/light_owl.svg">
                </action>
            </group>
        </group>

        <group id="MaterialLiteTheme.ContrastThemeChooser" popup="true"
               icon="/icons/actions/mt/contrast.svg">
            <group id="MaterialTheme.ThemeChooser.Contrast.Dark"
                   popup="true"
                   icon="/icons/actions/mt/dark.svg"
                   class="com.mallowigi.idea.themes.ActionGroup">

                <action id="MTDarkerThemeContrast"
                        class="com.mallowigi.idea.themes.MTDarkerThemeAction"
                        icon="/icons/actions/themes/darker.svg">
                </action>
                <action id="MTOceanicThemeContrast"
                        class="com.mallowigi.idea.themes.MTOceanicThemeAction"
                        icon="/icons/actions/themes/oceanic.svg">
                </action>
                <action id="MTPalenightThemeContrast"
                        class="com.mallowigi.idea.themes.MTPalenightThemeAction"
                        icon="/icons/actions/themes/palenight.svg">
                </action>

                <separator key="separator.nature"/>

                <action id="MTDeepOceanThemeContrast"
                        class="com.mallowigi.idea.themes.MTDeepOceanThemeAction"
                        icon="/icons/actions/themes/deepocean.svg">
                </action>
                <action id="MTForestThemeContrast"
                        class="com.mallowigi.idea.themes.MTForestThemeAction"
                        icon="/icons/actions/themes/forest.svg">
                </action>
                <action id="MTVolcanoThemeContrast"
                        class="com.mallowigi.idea.themes.MTVolcanoThemeAction"
                        icon="/icons/actions/themes/volcano.svg">
                </action>

                <separator key="separator.third.-.party"/>

                <action id="MTMonokaiThemeContrast"
                        class="com.mallowigi.idea.themes.MTMonokaiThemeAction"
                        icon="/icons/actions/themes/monokai.svg">
                </action>
                <action id="MTGitHubDarkThemeContrast"
                        class="com.mallowigi.idea.themes.MTGithubDarkThemeAction"
                        icon="/icons/actions/themes/githubdark.svg">
                </action>
                <action id="MTDraculaThemeContrast"
                        class="com.mallowigi.idea.themes.MTDraculaThemeAction"
                        icon="/icons/actions/themes/dracula.svg">
                </action>
                <action id="MTArcDarkThemeContrast"
                        class="com.mallowigi.idea.themes.MTArcDarkThemeAction"
                        icon="/icons/actions/themes/arc_dark.svg">
                </action>
                <action id="MTOneDarkThemeContrast"
                        class="com.mallowigi.idea.themes.MTOneDarkThemeAction"
                        icon="/icons/actions/themes/one_dark.svg">
                </action>
                <action id="MTSolarizedDarkThemeContrast"
                        class="com.mallowigi.idea.themes.MTSolarizedDarkThemeAction"
                        icon="/icons/actions/themes/solarized_dark.svg">
                </action>
                <action id="MTNightOwlThemeContrast"
                        class="com.mallowigi.idea.themes.MTNightOwlThemeAction"
                        icon="/icons/actions/themes/night_owl.svg">
                </action>
                <action id="MTMoonlightThemeContrast"
                        class="com.mallowigi.idea.themes.MTMoonlightThemeAction"
                        icon="/icons/actions/themes/moonlight.svg">
                </action>
                <action id="MTSynthwaveThemeContrast"
                        class="com.mallowigi.idea.themes.MTSynthwaveThemeAction"
                        icon="/icons/actions/themes/synthwave.svg">
                </action>
            </group>

            <group id="MaterialTheme.ThemeChooser.Contrast.Light"
                   popup="true"
                   icon="/icons/actions/mt/light.svg"
                   class="com.mallowigi.idea.themes.ActionGroup">
                <action id="MTLighterThemeContrast"
                        class="com.mallowigi.idea.themes.MTLighterThemeAction"
                        icon="/icons/actions/themes/lighter.svg">
                </action>
                <action id="MTGitHubThemeContrast"
                        class="com.mallowigi.idea.themes.MTGithubThemeAction"
                        icon="/icons/actions/themes/github.svg">
                </action>
                <action id="MTOneLightThemeContrast"
                        class="com.mallowigi.idea.themes.MTOneLightThemeAction"
                        icon="/icons/actions/themes/one_light.svg">
                </action>
                <action id="MTSolarizedLightThemeContrast"
                        class="com.mallowigi.idea.themes.MTSolarizedLightThemeAction"
                        icon="/icons/actions/themes/solarized_light.svg">
                </action>
                <action id="MTLightOwlThemeContrast"
                        class="com.mallowigi.idea.themes.MTLightOwlThemeAction"
                        icon="/icons/actions/themes/light_owl.svg">
                </action>
            </group>
        </group>

        <group id="MaterialLiteTheme.Menu" popup="true"
               icon="/icons/actions/mt/themeSwitch.svg">
            <reference id="MaterialLiteTheme.ThemeChooser"/>
            <separator/>
            <reference id="MaterialLiteTheme.ContrastThemeChooser"/>
            <add-to-group group-id="ToolsMenu"/>
            <add-to-group group-id="ExperimentalToolbarActions" anchor="last"/>
            <add-to-group group-id="MainToolBar" anchor="last"/>
            <add-to-group group-id="ChangeScheme" anchor="after" relative-to-action="MaterialLiteTheme.Menu"/>
        </group>

    </actions>

</idea-plugin>
